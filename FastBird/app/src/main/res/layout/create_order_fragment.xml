<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pickup Address (*)"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup Address" />

            <Spinner
                android:imeOptions="actionNext"
                android:id="@+id/pickupAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name (*)" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/contactName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone1 (*)" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/phone1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone2" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/phone2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flat No." />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/flatno"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/buildNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building No. (*)" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/buildingNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/roadTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Road (*)" />

            <EditText
                android:id="@+id/road"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/blockNoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block No. (*)" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/blockNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location (*)" />

            <AutoCompleteTextView
                android:completionThreshold="1"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:id="@+id/location"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/note"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Time (*)" />

            <Spinner
                android:imeOptions="actionNext"
                android:id="@+id/deliveryTime"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/moneyDeliveryTypeContainer"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Money Delivery Type (*)" />

            <Spinner
                android:imeOptions="actionNext"
                android:id="@+id/moneyDeliveryType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weightContainer"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight (Gram)(*)" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/weight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lengthContainer"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Length (cm)(*)" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/length"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/heightContainer"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height (cm)(*)" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/height"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widthContainer"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Width (cm)(*)" />

            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:id="@+id/width"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/packageTypeContainer"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Details (*)"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Package Type (*)" />

            <Spinner
                android:imeOptions="actionNext"
                android:id="@+id/packageType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Type (*)" />

            <Spinner
                android:imeOptions="actionNext"
                android:id="@+id/serviceType"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:background="@drawable/create_order_button"
                android:id="@+id/submitButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Get Price" />

            <Button
                android:layout_marginTop="5dp"
                android:background="@drawable/clear_order_button"
                android:textSize="18sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/White"
                android:id="@+id/clearBtn"
                android:text="Clear" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>